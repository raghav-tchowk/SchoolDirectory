<% if !flash[:notice].to_i.blank? %>
<div style="color:green">
<%= flash[:notice] %>
</div>
<% end -%>
	
	

<div>
	<h2>Staff Departments</h2>


	


	<table summary="sdepts list">
		<tr>
		<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>staff department&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>department_alias&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>department_code&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>description&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>status&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>remarks&nbsp;&nbsp;&nbsp;&nbsp;</th>
		
		</tr>
		<% @sdepts.each do |sdept| %>

			<tr>
				<td><%=sdept.id%></td>
				<td><%=sdept.name%></td>
				<td><%=sdept.departemnt_alias%></td>
				<td><%=sdept.department_code %></td>
				<td><%=sdept.description %></td>
				<td><%=sdept.status %></td>
				<td><%=sdept.remarks %></td>
				
				<td>

					<%=link_to("Show", {:action=>"show", :id=>sdept.id}) %>
					<%= link_to("Edit", {:action=>"edit", :id=>sdept.id}) %>
					<%= link_to("Delete", {:action=>"delete", :id=>sdept.id}) %>
				</td>
			</tr>
		<% end %>
	</table>
</div>

<%= link_to("<<new staff department>>", {:action=>"new"}) %>


<% if !flash[:notice].to_i.blank? %>
<div>
<%= flash[:notice] %>
</div>
<% end -%>
	
	

<div>
	<h2>Sticky notes</h2>



	<table summary="notes list">
		<tr>
		<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>note title&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Subject&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Target Date&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Remindar set&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Priority&nbsp;&nbsp;&nbsp;&nbsp;</th>
		


		<!-- #@user.occasions.sort {|a,b| b.dateg <=> a.dateg }.each do |o| -->





		</tr>
		<% @notes.order("target_date ASC").order("priority ASC").order("remind_me DESC").each do |note| %>

			<tr>
				<td><%=note.id%></td>
				<td><%=note.title%></td>
				<td><%=note.subject%></td>
				<td><%=note.target_date %></td>
				<td><%=note.remind_me %></td>
				<td><%=note.priority %></td>
				
				<td>

					<%=link_to("Show", {:action=>"show", :id=>note.id}) %>
				<%= link_to("Edit", {:action=>"edit", :id=>note.id}) %>
				<%= link_to("Delete", {:action=>"delete", :id=>note.id}) %>



				</td>


			</tr>
		<% end %>
	</table>
</div>

<%= link_to("<<new note>>", {:action=>"new"}) %>


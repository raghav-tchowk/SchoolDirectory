<% if !flash[:notice].to_i.blank? %>
<div class="notice" style="color:green">
<%= flash[:notice] %>
</div>
<% end -%>
	
	



<h1>Showing Sticky note <%=@note.title %></h1>
<%= link_to("<<Back to full list", {:action=>"list"}, :class=>"back-links") %>
<div class="notes list">
	<ul>
	<li><b>ID</b> <%=@note.id%></li>
	<li><b>Note Title</b>  <%=@note.title%></li>
	<li class="center"><b>Subject</b>  <%=@note.subject %></li>
	<li class="center"><b>Target date</b>  <%=@note.target_date %></li>
	<li class="center"><b>Reminder set</b>  <%=@note.remind_me %></li>
	<li class="center"><b>priority</b>  <%=@note.priority %></li>
	</ul>

</div>

<%= link_to("update>>", {:action=>"edit", :id=>@note.id}, :class=>"back-links") %>
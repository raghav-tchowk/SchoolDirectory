<% if !flash[:notice].to_i.blank? %>
<div>
<%= flash[:notice] %>
</div>
<% end -%>
	
	

<div>
	<h2>Subjects list</h2>



	<table summary="subs list">
		<tr>
		<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Subject&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Section_Id&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>mark&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>teacher&nbsp;&nbsp;&nbsp;&nbsp;</th>
		
		</tr>
		<% @subs.each do |sub| %>

			<tr>
				<td><%=sub.id%></td>
				<td><%=sub.name%></td>
				<td><%=sub.section_id %></td>
				<td><%=sub.mark %></td>
				<td><%=sub.teacher %></td>
				
				<td>

					<%=link_to("Show", {:action=>"show", :id=>sub.id}) %>
				<%= link_to("Edit", {:action=>"edit", :id=>sub.id}) %>
				<%= link_to("Delete", {:action=>"delete", :id=>sub.id}) %>



				</td>


			</tr>
		<% end %>
	</table>
</div>


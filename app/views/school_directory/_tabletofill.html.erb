<table summary="Schools form fields">



<tr >
<td><%=f.label(:name) %>*</td>
<td><%=f.text_field(:name) %></td>
</tr>


<tr >
<td><%=f.label(:address_line1) %>*</td>
<td><%=f.text_area(:address_line1, :size=>"50*5") %></td>
<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
<td><%=f.label(:address_line2) %></td>
<td><%=f.text_area(:address_line2, :size=>"50*5") %></td>
</tr>


<tr >
<td><%=f.label(:city) %>*</td>
<td><%=f.text_field(:city) %></td>
</tr>


<tr >
<td><%=f.label(:state) %>*</td>
<td><%=f.text_field(:state) %></td>
</tr>


<tr >
<td><%=f.label(:pincode) %>*</td>
<td><%=f.text_field(:pincode) %></td>
</tr>


<tr >
<td><%=f.label(:webaddress) %>*</td>
<td><%=f.text_field(:webaddress) %></td>
</tr>


<tr >
<td><%=f.label(:email_id) %>*</td>
<td><%=f.text_field(:email_id) %></td>
</tr>


<tr >
<td><%=f.label(:landline_no1) %>*</td>
<td><%=f.text_field(:landline_no1) %></td>
<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

<td><%=f.label(:landline_no2) %></td>
<td><%=f.text_field(:landline_no2) %></td>
</tr>


<tr >
<td><%=f.label(:fax_no1) %>*</td>
<td><%=f.text_field(:fax_no1) %></td>
<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

<td><%=f.label(:fax_no2) %></td>
<td><%=f.text_field(:fax_no2) %></td>
</tr>


<tr >
<td><%=f.label(:mobile_no1) %>*</td>
<td><%=f.text_field(:mobile_no1) %></td>
<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

<td><%=f.label(:mobile_no2) %></td>
<td><%=f.text_field(:mobile_no2) %></td>
</tr>


<tr >
<td><%=f.label(:affliated) %>*</td>
<td><%=f.check_box(:affliated?) %></td>
<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>



	<% if :affliated? %>

		<td><%=f.label(:affliated_to_board) %></td>
		<td><%=f.select(:affliated_to_board, ["ICSE", "CBSE"], {:prompt => "-select-"}) %></td>
	<%end%>

</tr>


<tr >
<td><%=f.label(:established_year) %>*</td>
<% h= (1600..2013).sort.reverse %>
<td><%=f.select(:established_year, h, {:prompt => "-select-"}) %></td>
</tr>


<tr >
<td><%=f.label(:classes) %>*</td>
<td><%=f.select(:classe, ["Nursery","LKG","UKG","One","Two"], {:prompt => "-select-"}, { :multiple => true, :size => 5 }) %></td>
</tr>


<tr >
<td><%=f.label(:medium) %>*</td>
<td><%=f.select(:medium, ["English", "Hindi"], {:prompt => "-select-"}) %></td>
</tr>



</table>

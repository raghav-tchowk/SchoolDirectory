<% if !flash[:notice].to_i.blank? %>
<div>
<%= flash[:notice] %>
</div>
<% end -%>
	
	

<div>
	<h2>Sections List</h2>



	<table summary="sections list">
		<tr>
		<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Section&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Standard ID&nbsp;&nbsp;&nbsp;&nbsp;</th>
		
		</tr>
		<% @sections.each do |section| %>

			<tr>
				<td><%=section.id%></td>
				<td><%=section.name%></td>
				<td><%=section.standard_id%></td>
				
				
				<td>

					<%=link_to("Show", {:action=>"show", :id=>section.id}) %>
				<%= link_to("Edit", {:action=>"edit", :id=>section.id}) %>
				<%= link_to("Delete", {:action=>"delete", :id=>section.id}) %>



				</td>


			</tr>
		<% end %>
	</table>
</div>

<%= link_to("<<new Section>>", {:action=>"new"}) %>


<% if !flash[:notice].to_i.blank? %>
<div>
<%= flash[:notice] %>
</div>
<% end -%>
	
	

<div>
	<h2>Emergency alerts list</h2>



	<table summary="emalerts list">
		<tr>
		<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
		<th>Emergency Alert&nbsp;&nbsp;&nbsp;&nbsp;</th>
		
		
		</tr>
		<% @emalerts.each do |emalert| %>

			<tr>
				<td><%=emalert.id%></td>
				<td><%=emalert.name%></td>
				
				
				<td>

					<%=link_to("Show", {:action=>"show", :id=>emalert.id}) %>
				<%= link_to("Edit", {:action=>"edit", :id=>emalert.id}) %>
				<%= link_to("Delete", {:action=>"delete", :id=>emalert.id}) %>



				</td>


			</tr>
		<% end %>
	</table>
</div>

